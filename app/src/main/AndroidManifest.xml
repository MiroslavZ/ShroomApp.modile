<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shroomapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic= "true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShroomApp">
        <activity
            android:name=".presentation.add_new_farm.AddFarmActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.farm_notifications.NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.sensor_stats.SensorStatsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.farm_sensors.SensorsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.farms.MyFarmsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShroomApp.NoActionBar" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>